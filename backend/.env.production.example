# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in the values
# NEVER commit the actual .env file to git!

# =======================
# SECURITY SETTINGS
# =======================

# Generate a new SECRET_KEY for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-KEY

# CRITICAL: Set to False in production
DEBUG=False

# Your production domain(s)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# =======================
# DATABASE CONFIGURATION
# =======================

# Use PostgreSQL in production
DB_ENGINE=django.db.backends.postgresql
DB_NAME=talabin_production
DB_USER=talabin_user
DB_PASSWORD=STRONG-DATABASE-PASSWORD-HERE
DB_HOST=localhost
DB_PORT=5432

# =======================
# JWT AUTHENTICATION
# =======================

# Token lifetime in minutes (15 min recommended for production)
JWT_ACCESS_TOKEN_LIFETIME=15

# Refresh token lifetime in days
JWT_REFRESH_TOKEN_LIFETIME=7

# =======================
# CORS CONFIGURATION
# =======================

# Frontend domain(s) allowed to access the API
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =======================
# REDIS CONFIGURATION
# =======================

# For Celery and caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =======================
# EMAIL CONFIGURATION
# =======================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# =======================
# SMS GATEWAY (Choose one)
# =======================

# Option 1: Kavenegar
KAVENEGAR_API_KEY=your-kavenegar-api-key
SMS_SENDER=10008663

# Option 2: Ghasedak
# GHASEDAK_API_KEY=your-ghasedak-api-key
# SMS_SENDER=your-line-number

# Option 3: IPPanel
# IPPANEL_API_KEY=your-ippanel-api-key
# SMS_SENDER=your-pattern-code

# =======================
# PAYMENT GATEWAY (Choose one)
# =======================

# Option 1: ZarinPal
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id

# Option 2: IDPay
# IDPAY_API_KEY=your-idpay-api-key

# Option 3: NextPay
# NEXTPAY_API_KEY=your-nextpay-api-key

# =======================
# APPLICATION SETTINGS
# =======================

# Transaction fee percentage (0.5 = 0.5%)
TRANSACTION_FEE_PERCENTAGE=0.5

# Minimum purchase amount in Toman
MIN_PURCHASE_AMOUNT=100000

# Minimum withdrawal amount in Toman
MIN_WITHDRAWAL_AMOUNT=50000

# OTP Settings
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# =======================
# AWS S3 (Optional - for media files)
# =======================

# Uncomment if using AWS S3 for file storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# =======================
# MONITORING & LOGGING
# =======================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =======================
# ADDITIONAL SETTINGS
# =======================

# Gold price API (if using external service)
# GOLD_PRICE_API_KEY=your-api-key
# GOLD_PRICE_API_URL=https://api.example.com/gold-price

# Admin contact email
ADMIN_EMAIL=admin@yourdomain.com

# Support contact
SUPPORT_EMAIL=support@yourdomain.com
SUPPORT_PHONE=+989123456789
